<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             x:Class="JZXY.Duoke.LoginPage">
    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="/resource/bg.jpg" AbsoluteLayout.LayoutBounds="1.,1.,1,1"  AbsoluteLayout.LayoutFlags="All" Aspect="Fill"/>
            <StackLayout WidthRequest="300" Opacity="0.9" Padding="10" BackgroundColor="DarkGray" >
                <Label Text="多可文档管理终端" FontSize="Large" HorizontalOptions="Center" TextColor="LightYellow" />
                <Label Text="地址" TextColor="White"
                VerticalOptions="Start"></Label>
                <Entry x:Name="address" TextColor="White"></Entry>
                <Label Text="账号" TextColor="White"
                VerticalOptions="Start"></Label>
                <Entry x:Name="loginID" TextColor="White"></Entry>
                <Label Text="密码" TextColor="White"
                VerticalOptions="Start"></Label>
                <Entry x:Name="loginPwd" TextColor="White"></Entry>
                <Button Text="登录" Clicked="Button_Clicked" TextColor="White"></Button>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>